<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CheckpointCreation"
    android:background="#133231">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/ic_bg_course">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkpoint Creation"
            android:layout_margin="30sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#133231"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of checkpoints : "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/checkpointNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_margin="5sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkpoint NÂ°"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/checkpointID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>
            </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hint : "
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>
                <EditText
                    android:textColor="#FFFFFF"
                    android:textColorHint="#BBBBBB"
                    android:id="@+id/checkpointHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter a hint for the checkpoint"/>

            <Button
                android:layout_marginRight="20sp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Checkpoint"
                android:backgroundTint="#EEEEEE"
                android:onClick="addCheckpoint"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_margin="20sp"
        android:layout_gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Checkpoints"
        android:background="@drawable/ic_bg_button"
        app:backgroundTint="#25BF72"
        android:textColor="#FFFFFF"
        android:onClick="generateCheckpoints"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>