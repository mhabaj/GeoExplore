<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_course_search"
    tools:context=".activity.Recherche">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg_course"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/courseList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.00999999"><![CDATA[

                android:text="Button" />
                ]]>

                <Button
                    android:id="@+id/button5"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@color/white"

                    app:icon="?attr/actionModeCloseDrawable"
                    app:iconTint="#000000" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Courses"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/espace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">


                        <Spinner
                            android:id="@+id/rankingCourse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="25dp"
                            android:background="@color/whiteGrey"
                            android:ems="10"
                            android:entries="@array/ranking"
                            android:gravity="start|top"
                            android:padding="5dp" />

                        <Spinner
                            android:id="@+id/courseDifficulty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="25dp"
                            android:background="@color/whiteGrey"
                            android:ems="10"
                            android:entries="@array/difficulty"
                            android:gravity="start|top"

                            android:padding="5dp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#6FFFFFFF"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/distance" />

                </LinearLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@color/black"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    tools:ignore="RtlHardcoded">

                </Button>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/courseList"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints"
            tools:listitem="@layout/course_item" />


</androidx.constraintlayout.widget.ConstraintLayout>